" Font
set guifont=Source\ Code\ Pro:h14

" MacVim: smooth fonts.
set antialias

" Use UTF-8 everywhere.
set encoding=utf-8

syntax enable
set background=dark
colorscheme Tomorrow-Night

" No audible bell
set vb

" Don't show right scrollbar
set guioptions-=r

" No toolbar
set guioptions-=T

" Use console dialogs
set guioptions+=c

" fullscreen maximizes vertically AND horizontally
set fuoptions=maxvert,maxhorz
